= form_for @feedback_subject do |f|
  - if @feedback_subject.errors.any?
    #error_explanation
      %h2= "#{pluralize(@feedback_subject.errors.count, "error")} prohibited this feedback_subject from being saved:"
      %ul
        - @feedback_subject.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
